<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_home_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="限定皮肤免费送噢噢噢噢噢噢噢噢噢噢噢噢哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#9c9c9c"
                    android:id="@+id/tv_item_kaijiang"
                    android:text="开奖进度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_item_kaijiang"
                    android:textColor="#29d5ec"
                    android:text="19%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:layout_below="@+id/tv_item_kaijiang"
                    android:id="@+id/my_progress"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:max="100"
                    android:progress="40"
                    android:secondaryProgress="70"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#c7c7c3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>