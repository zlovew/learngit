<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="帮助"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_item_setting_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_item_setting"
        android:text="无图"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/iv_setting_item_more"
        android:layout_width="wrap_content"
        android:background="@mipmap/ic_arrow_right"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <custom.SlipButton
        android:id="@+id/sb_setting_item"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <View
        android:id="@+id/line_setting_short"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="#000"/>

    <View
        android:id="@+id/line_setting_thick"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="#000"/>
</RelativeLayout>